{
    "name": "InviteBox",
    "description": "Acquire new customers with a social referral program. InviteBox is a flexible referral marketing solution that brings you new customers at no cost.",
    "version": "0.1",
    "category": "marketing",
    "main": "public/javascripts/app_module.js",
    "config":{
        "details":{
            "Language": "English",
            "Price": "Free",
            "Restrictions": "None",
            "TOS":"http://invitebox.com/privacy/",
            "has_js": true
        }, 
        "assets":{
            "logos": {
	    	     "200px": "./public/images/logo-200.png"
            }
        },
        "interface": [
            {
                "type": "string",
                "id": "food",
                "name": "Favorite Food",
                "description": "Please tell us your favorite food.",
                "domain_request": true,
                "private": true
            },
            {
                "type": "select",
                "id": "lottery",
                "name": "Do you Lotto?",
                "description": "Choose whether to buy a ticket",
                "options": [
                    {
                        "label": "Yes, buy a ticket!",
                        "value": "true"
                    },
                    {
                        "label": "No, I am scared.",
                        "value": ""
                    }
                ]
            }
        ]
    },
    "account": {
        "callback_url": "http://new.invitebox.com/api/generate-account/",
        "user_fields": ["email"]
    },
    "billing": {
        "type": "zone",
        "plans":[
            {
                "name" : "StartUp",
                "price": "19"
            },
            {
                "name" : "Small Business",
                "price" : "59"
            }
        ]
    }
}